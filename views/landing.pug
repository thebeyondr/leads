doctype html
html(lang='en')
  include common/head.pug 
  +head("Leadr - Find and save leads")
  body
    header
      include common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1.mb-3 Sales Leads
            p.lead Collect sales leads to help your business grow.
            form(action="/", method="post").form-inline
              .form-group.mb-3.ml-sm-5
                label(for="lead_email").sr-only Email
                input#lead_email(type="email", name="lead_email", placeholder="lead@email.com").form-control.mr-2
                button(type="submit").btn.btn-primary Save a Lead
        .row.align-items-center
          .col-md-6
            if leads
              h1 Leads
              table.table
                thead
                  tr
                    th(scope="col") Email
                    th(scope="col") Actions
                    th(scope="col") 
                  tr
                tbody
                  for lead in leads
                    tr(id=lead.id)
                      td
                        span #{lead.email}
                      td
                        a(href="/leads/"+ lead.id) View Details
                      td
                        button(onclick=`deleteLead('${lead.id}')`).btn.btn-sm.btn-danger Delete
    include common/footer.pug
    +footer()
    script(src="/javascripts/leads.js")