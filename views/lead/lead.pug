doctype html
html(lang='en')
  include ../common/head.pug 
  +head("Lead Details | Leadr")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1.mb-3 Lead Details
            table.table
              thead
                tr
                  th(scope="col") Email
                  th(scope="col") Edit
                  th(scope="col") Delete
                tr
              tbody
                tr(id=lead.id)
                  td
                    span #{lead.email}
                  td
                    a(href=`/leads/${lead.id}/edit`)  Edit Lead
                  td
                    form(action=`/leads/${lead.id}/delete`, method="post")
                      button(type="submit").btn.btn-sm.btn-danger Delete
    include ../common/footer.pug
    +footer()
    