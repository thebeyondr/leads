doctype html
html(lang='en')
  include ../common/head.pug 
  +head("Saved Leads - Leadr")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1.mb-3 Saved Leads
            table.table
              thead
                tr
                  th(scope="col") Email
                  th(scope="col") Actions
                  th(scope="col") 
                tr
              tbody
                for lead in leads
                  tr(id=lead.id)
                    td
                      span #{lead.email}
                    td
                      a(href="/leads/"+ lead.id) View Details
                    td
                      button(onclick=`deleteLead('${lead.id}')`).btn.btn-sm.btn-danger Delete
    include ../common/footer.pug
    +footer()
    script(src="/javascripts/leads.js")