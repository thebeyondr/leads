doctype html
html(lang='en')
  include ../common/head.pug 
  +head("Lead Details | Leadr")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1.mb-3 Edit Lead Details
            p Edit your lead below
            form(action=`/leads/${lead.id}/edit`, method="post").form-inline.ml-5
              label(for="lead_email").sr-only Email
              input#email(type="email", name="lead_email", value=lead.email).form-control.mr-2
              button(type="submit").btn.btn-success Update
    include ../common/footer.pug
    +footer()
    



